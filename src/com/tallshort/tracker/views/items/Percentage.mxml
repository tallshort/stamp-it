		  xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%"   >
	<fx:Script>
		<![CDATA[
		[Bindable]
		public var percent:String = "0";	
		
		
		]]>
	</fx:Script>
	<s:states>
		<s:State name="redColor" />
		<s:State name="blueColor" />
	</s:states>
	<s:Label height="40" width="100%" text="{percent}" color.redColor="red" color.blueColor="blue" verticalAlign="middle"  />
	
</s:HGroup>

